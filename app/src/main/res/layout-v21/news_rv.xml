<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="10dp"
    android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#abbdb6c7">

            <ImageView
                android:id="@+id/ImageVid"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:minHeight="100dp"
                android:src="@drawable/afk"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="@dimen/fab_margin"
                android:layout_marginRight="@dimen/fab_margin"
                android:layout_marginTop="@dimen/fab_margin"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:background="#c9a7b75a"
                android:contentDescription="@string/image" />

            <TextView
                android:id="@+id/titleTv"
                style="@style/AppTheme"
                android:maxLines="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ImageVid"
                android:layout_margin="@dimen/fab_margin"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/sun"
                android:text="@string/body_test"
                android:textSize="25sp"
                android:textAlignment="center"
                />
            <TextView
                android:id="@+id/gameTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/titleTv"
                android:textColor="#757575"
                android:fontFamily="@font/sun"
                android:text="@string/type"
                style="@style/AppTheme"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                />
        </RelativeLayout>

</android.support.v7.widget.CardView>