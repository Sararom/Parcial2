<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f9e8">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/fvPic"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:scaleType="fitCenter"
                android:padding="20sp"
                android:background="@android:color/black"
                android:src="@drawable/afk"
                android:contentDescription="@string/current_image" />
            <TextView
                android:id="@+id/fvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/sun"
                android:text="@string/title"
                android:textSize="35sp"

                android:textColor="@android:color/black"
                android:padding="@dimen/fab_margin" />
            <TextView
                android:id="@+id/newBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:fontFamily="@font/sun"
                android:layout_gravity="center_horizontal"
                android:textColor="@android:color/black"
                android:textSize="25sp"
                android:text="@string/cuerpo_de_noticia"/>
        </LinearLayout>

    </ScrollView>



</RelativeLayout>